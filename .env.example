# MCP Router Configuration

# Router Settings
ROUTER_PORT=4000
ROUTER_NAME=mcp-router
ROUTER_VERSION=1.0.0
TOOL_NAME_SEPARATOR=:

# Database Configuration
# For local development with existing PostgreSQL
DATABASE_URL=postgresql://localhost/mcp_router

# Or use individual connection params
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=mcp_router
# DB_USER=postgres
# DB_PASSWORD=postgres

# Database Options
DB_POOL_SIZE=20
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000
DB_SSL=false
# DB_SSL_REJECT_UNAUTHORIZED=false  # For self-signed certs

# Migrations
RUN_MIGRATIONS=true

# Logging Options
ENABLE_EVENT_LOG=true
ENABLE_AUDIT_LOG=false  # Set to true in production
AUDIT_RETENTION_DAYS=30

# Node Environment
NODE_ENV=development